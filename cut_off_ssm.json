{
  "schemaVersion": "2.2",
  "description": "Command Document Example JSON Template",
  "parameters": {
    "Username": {
      "type": "String",
      "description": "Target username to unlock",
      "default": ""
    },
    "Cutoffdate": {
      "type": "String",
      "description": "New expiry date of account",
      "default": ""
    }
  },
  "mainSteps": [
    {
      "action": "aws:runPowerShellScript",
      "name": "AddToLocalAdmin",
      "inputs": {
        "runCommand": [
          "",
          "Set-ADAccountExpiration -Identity {{Username}} -DateTime {{Cutoffdate}}",
          "net user {{Username}}",
          "Get-ADUser -Identity {{Username}} -Properties AccountExpirationDate | Select-Object AccountExpirationDate",
          ""
        ]
      }
    }
  ]
}
